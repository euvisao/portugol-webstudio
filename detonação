programa 
{
  inclua biblioteca Util

  funcao inicio() 
  {
    inteiro contador = 10
    enquanto(contador > 0)
    {
    limpa()
    escreva("Detonação em: ", contador, " segundo(s).")
    contador = contador - 1
    Util.aguarde(1000) // aguarda 1 segundo a cada vez q ele imprimir na tela
    }
    limpa()
    escreva("BOOOOMMMM!!!!!")
  }
}
