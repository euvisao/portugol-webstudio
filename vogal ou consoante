programa 
{
  funcao inicio() 
  {
    caracter letra

    escreva ("digite uma letra qualquer: ")
    leia (letra)

    se
    (
      letra == 'A' ou letra == 'E' ou letra == 'I' ou letra == 'O' ou letra == 'U' ou letra == 'a' ou letra == 'e' ou letra == 'i'
      ou letra == 'o' ou letra == 'u'
    )
    {
      escreva("a letra que você digitou é uma vogal.")
    }
    senao
    {
      escreva("a letra que você digitou é uma consoante.")
    }
  }
}
